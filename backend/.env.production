# Production Environment Variables for Railway
# Copy this to Railway environment variables

# Server
ENVIRONMENT=production
PORT=8080

# Database (Neon PostgreSQL)
DB_HOST=YOUR_NEON_HOST
DB_PORT=5432
DB_USER=YOUR_NEON_USER
DB_PASSWORD=YOUR_NEON_PASSWORD
DB_NAME=YOUR_NEON_DATABASE
DB_SSLMODE=require

# JWT (Generate new secrets!)
JWT_SECRET=YOUR_NEW_JWT_SECRET_256_BITS_LONG
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_DAYS=7

# AWS S3 (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=unicorn-sport-media-prod
AWS_CLOUDFRONT_URL=https://YOUR_CLOUDFRONT_DISTRIBUTION.cloudfront.net

# Stripe (Production Mode)
STRIPE_SECRET_KEY=YOUR_STRIPE_PRODUCTION_SECRET_KEY
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET
STRIPE_PRICE_SCOUT=YOUR_STRIPE_PRICE_ID_SCOUT
STRIPE_PRICE_PRO=YOUR_STRIPE_PRICE_ID_PRO
STRIPE_PRICE_ENTERPRISE=YOUR_STRIPE_PRICE_ID_ENTERPRISE

# Stripe Checkout URLs (Production)
STRIPE_SUCCESS_URL=https://yourdomain.com/subscription/success
STRIPE_CANCEL_URL=https://yourdomain.com/subscription/cancel